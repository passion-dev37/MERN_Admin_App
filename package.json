{
  "name": "my-mern-stack-admin-app",
  "version": "1.0.0",
  "description": "backend for My MERN Stack Admin App",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "build": "npm run start && cd client && npm install && npm run build",
    "lint": "prettier --write server && prettier --write client/src && eslint --fix  server && eslint --fix  client/src"
  },
  "author": "Mark Zhu",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.2",
    "babel-eslint": "^10.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.2",
    "config": "^3.2.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.1",
    "qrcode": "^1.4.4",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui": "^3.24.3",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-unused-imports": "^0.1.2",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, jsx, tsx, ts, json, scss}": [
      "prettier --write"
    ]
  }
}
